<%= form_for(resource, as: resource_name, data: { turbo: false }, url: session_path(resource_name)) do |f| %>

  <div class="nav-header mb-2">
    <div>
      <%= link_to  :root do %>
        <%= image_tag "back.svg", style: 'height:10px; width:auto;' %>
      <% end  %>
    </div>
    <h4 class="text-gray-4">LOGIN</h4>
    <div>
        <h3 class= 'logo'>Olive</h3>
    </div>
  </div>


 <div class="form-group-custom">
    <%= f.email_field :email, class: 'form-control-custom', placeholder: 'Email' %>
  </div> 


  <div class="form-group-custom">
    <%= f.password_field :password, autocomplete: 'current-password',placeholder: 'Password', class: 'form-control-custom' %>
  </div>
  <div class="actions">
    <%= f.submit "Log in", class: "bg-blue hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mb-4" %>
  </div>

<% end %>

<%= render 'devise/shared/links' %>
